<Window x:Class="nio2so.TSOView2.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nio2so.TSOView2"
        mc:Ignorable="d"
        Title="About TSOView2" SizeToContent="Height" Width="350">
    <StackPanel Margin="10">
        <TextBlock  VerticalAlignment="Top" FontWeight="Bold" FontSize="18">TSOView2 (part of nio2so)</TextBlock>
