<Page x:Class="nio2so.TSOView2.Formats.Cst.CSTDirectoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:nio2so.TSOView2.Formats.Cst"
             mc:Ignorable="d" Foreground="White"
             MinHeight="300" MinWidth="350" Name="HOST" Title="TSOView2 String Directory Viewer">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="150" Width="1*" MaxWidth="300"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Margin="10,10,5,10">
            <DockPanel DockPanel.Dock="Top" Margin="0,0,0,5">
                <TextBlock VerticalAlignment="Center">CST Files in Directory</TextBlock>
            </DockPanel>
            <TreeView x:Name="DirectoryTree">

            </TreeView>
        </DockPanel>
        <DockPanel Margin="5,10,10,10" Grid.Column="1">
            <TextBlock DockPanel.Dock="Top" Margin="0,0,0,5">
                <Run>Strings in </Run>
                <Run Text="{Binding SelectedValue.Header,ElementName=DirectoryTree,Mode=OneWay}"></Run>
            </TextBlock>
            <DataGrid x:Name="CSTDisplayGrid"/>
        </DockPanel>
    </Grid>
</Page>
