<Page x:Class="nio2so.TSOView2.Formats.FAR3.FAR3Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:nio2so.TSOView2.Formats.FAR3"
             mc:Ignorable="d" 
             MinHeight="400" MinWidth="350">
    <DockPanel>
        <UniformGrid Columns="3" DockPanel.Dock="Bottom">
            <Button Name="FileButton">
                <TextBlock>
                    <Run>Extract</Run>
                    <Run Text="{Binding SelectedItem, ElementName=FileTree, Mode=OneWay}"/>
                </TextBlock>
            </Button>
            <Button Name="AllButton" Click="AllButton_Click">Extract All</Button>
            <Button Name="CloseButton" Click="CloseButton_Click">Refresh</Button>
        </UniformGrid>
        <TreeView Name="FileTree"/>
    </DockPanel>
</Page>
